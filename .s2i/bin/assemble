#!/bin/bash

set -e

echo "---> Starting S2I assemble script for ySEal"

# Execute the default Python assemble script (installs from requirements.txt)
/usr/libexec/s2i/assemble

echo "---> Collecting static files"
mkdir -p /opt/app-root/src/logs
python manage.py collectstatic --noinput --clear || true

echo "---> S2I assemble complete"
