# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# Set USE_POSTGRES=True to use PostgreSQL, False (default) for SQLite
USE_POSTGRES=False
DB_NAME=yseal
